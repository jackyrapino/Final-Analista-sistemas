using System;
using System.Windows.Forms;
using WHUI.Menu;

namespace WHUI.Login
{
    public partial class LogIn : Form
    {
        public LogIn()
        {
            InitializeComponent();
        }

        private void btnLogin_Click(object sender, EventArgs e)
        {
            // Aquí iría la validación de credenciales. Por ahora asumimos éxito.
            this.Hide();

            using (var menu = new Menu())
            {
                menu.ShowDialog();
            }

            // Al cerrar el menú, cerramos el formulario de login para terminar la aplicación
            this.Close();
        }
    }
}