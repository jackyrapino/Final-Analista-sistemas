using System;
using System.Drawing;
using System.Windows.Forms;

namespace WHUI.Menu
{
    public partial class Menu : Form
    {
        public Menu()
        {
            InitializeComponent();
        }

        private void btnLogout_Click(object sender, EventArgs e)
        {
            // On logout, show the login form again.
            // Hide this menu (main form) while the login dialog is shown.
            this.Hide();

            using (var login = new WHUI.Login.LogIn())
            {
                var result = login.ShowDialog();
                if (result == DialogResult.OK)
                {
                    // Login successful for another user: show the menu again (could refresh user data here)
                    this.Show();
                }
                else
                {
                    // Login canceled or failed: close the menu to exit application
                    this.Close();
                }
            }
        }
    }
}
